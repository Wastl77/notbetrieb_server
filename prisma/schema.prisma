// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Resource {
  id                String  @id @default(auto()) @map("_id") @db.ObjectId
  callsign          String  @unique
  area              String
  resourceStatus    String?
  type              String
  resourceLineIndex String?
  sceneNumber       Int?
}

model Scene {
  id               String         @id @default(auto()) @map("_id") @db.ObjectId
  address          Address
  alarmKeyword     String
  sceneNumber      Int            @unique
  initialResources String[]
  resourceLines    ResourceLine[]
  sceneStatus      String
}

type Address {
  street   String
  object   String?
  district String?
}

type ResourceLine {
  index             Int
  type              String
  disposedType      String?
  callsign          String?
  status            String
  cancelledCallsign String?
}
